<header>
  <div>
    <a href="/events">Eventos</a>
    <a href="/rankings">Rankings</a>
    <a href="/fighters">Peleadores</a>
  </div>
  <div>
    <a href="/">
      <img src="/assets/ufc_logo.png" />
    </a>
  </div>
  <div>Buscador</div>
</header>
<script>
  window.addEventListener("scroll", function () {
    const header = document.querySelector("header");
    if (window.scrollY > 0) {
      header.classList.add("fixed");
    } else {
      header.classList.remove("fixed");
    }
  });
</script>
<style>
  header {
    background-color: black;
    margin: 30px;
    padding: 30px;
    text-align: center;
    font-size: 20px;
    display: flex;
    color: white;
    align-items: center;
    flex-wrap: nowrap;
    transition:
      margin-left 0.5s linear,
      margin-right 0.5s linear,
      margin-top 0.2s ease;
    z-index: 2;
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
  }

  .fixed {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    margin: 0;
  }

  img {
    width: 80px;
    height: auto;
    cursor: pointer;
  }
  div {
    flex: 1;
  }

  div:nth-child(1) {
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-around;
  }
  a {
    position: relative;
    text-decoration: none;
    color: white;
  }

  a::before {
    content: "";
    position: absolute;
    bottom: -6px;
    left: 0;
    width: 0;
    height: 2px;
    background-color: red;
    transition: width 0.3s ease-in-out;
  }

  a:hover::before {
    width: 100%;
  }
</style>
